{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": ["./*.ts", "./.vitepress/**/*.ts", "./.vitepress/**/*.vue", "docs/vite.config.ts", ".vitepress/config.ts", "vite.config.ts"],
	"exclude": ["dist", "node_modules"]
}
